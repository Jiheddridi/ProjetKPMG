{
  "name": "COBIT 2019 Evaluation Platform",
  "description": "Plateforme d'évaluation COBIT 2019 avec IA intégrée - Développée par Jihed Dridi",
  "repository": "https://github.com/Jiheddridi/ProjetKPMG",
  "logo": "https://cobit.org/wp-content/uploads/2019/02/COBIT-2019-Logo.png",
  "keywords": ["laravel", "php", "cobit", "evaluation", "ai", "mysql"],
  "stack": "heroku-22",
  "buildpacks": [
    {
      "url": "heroku/php"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "jawsdb:kitefin",
      "as": "DATABASE"
    }
  ],
  "env": {
    "APP_NAME": {
      "description": "Nom de l'application",
      "value": "COBIT Platform"
    },
    "APP_ENV": {
      "description": "Environnement de l'application",
      "value": "production"
    },
    "APP_KEY": {
      "description": "Clé de chiffrement Laravel",
      "generator": "secret"
    },
    "APP_DEBUG": {
      "description": "Mode debug",
      "value": "false"
    },
    "LOG_CHANNEL": {
      "description": "Canal de log",
      "value": "errorlog"
    },
    "LOG_LEVEL": {
      "description": "Niveau de log",
      "value": "error"
    },
    "CACHE_DRIVER": {
      "description": "Driver de cache",
      "value": "file"
    },
    "SESSION_DRIVER": {
      "description": "Driver de session",
      "value": "file"
    },
    "QUEUE_CONNECTION": {
      "description": "Connexion de queue",
      "value": "sync"
    }
  },
  "scripts": {
    "postdeploy": "php artisan migrate --force && php artisan config:cache && php artisan route:cache && php artisan view:cache"
  }
}
